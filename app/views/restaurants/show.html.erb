<div class="card">
  <h1> <%= @restaurant.name %> </h1> <br>
  <h5> <%= @restaurant.address %> </h2>
  <h5> <%= @restaurant.category %> </h2>
  <br>
</div>

<div class="reviews">
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %> - <%= review.rating %></li>
    <% end %>
  </ul>
  <br>
</div>

<div class="links-redirect">
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) , class: "btn btn-dark" %>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-light" %>
</div>
